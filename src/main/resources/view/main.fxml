<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.smarttodolist.MainController">

    <!-- ===== 顶部菜单栏 ===== -->
    <top>
        <VBox prefHeight="60.0" prefWidth="800.0" BorderPane.alignment="CENTER">
            <children>
                <MenuBar prefHeight="25.0" prefWidth="497.0">
                    <menus>
                        <Menu text="File">
                            <items>
                                <MenuItem text="New" onAction="#handleMenuNew"/>
                                <MenuItem text="Open" onAction="#handleMenuOpen"/>
                                <MenuItem text="Save" onAction="#handleMenuSave"/>
                                <SeparatorMenuItem/>
                                <MenuItem text="Exit" onAction="#handleMenuExit"/>
                            </items>
                        </Menu>
                        <Menu text="Help">
                            <items>
                                <MenuItem text="About" onAction="#handleMenuAbout"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>

                <HBox alignment="CENTER" spacing="12.0">
                    <children>
                        <Label text="Smart Todo List" textFill="#e17777">
                            <font>
                                <Font size="20.0"/>
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>

    <!-- ===== 左侧输入与筛选区域 ===== -->
    <left>
        <VBox spacing="10.0" BorderPane.alignment="CENTER_LEFT">
            <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
            <children>
                <!-- === 输入区 === -->
                <HBox spacing="10">
                    <Label text="Title:"/>
                    <TextField fx:id="taskNameInput" promptText="Enter title"/>
                </HBox>

                <HBox spacing="10">
                    <Label text="Description:"/>
                    <TextField fx:id="descriptionInput" promptText="Enter description"/>
                </HBox>

                <HBox spacing="10">
                    <Label text="Due Date:"/>
                    <DatePicker fx:id="dueDatePicker"/>
                </HBox>

                <HBox spacing="10">
                    <Label text="Category:"/>
                    <ChoiceBox fx:id="categoryChoiceBox" prefWidth="150"/>
                </HBox>

                <HBox spacing="10">
                    <Label text="Priority:"/>
                    <ChoiceBox fx:id="priorityChoiceBox" prefWidth="150"/>
                </HBox>

                <HBox spacing="10">
                    <Button text="Add" onAction="#handleAddTask"/>
                    <Button text="Edit" onAction="#handleEditTask"/>
                    <Button text="Delete" onAction="#handleDeleteTask"/>
                    <Button text="Complete" onAction="#handleMarkCompleted"/>
                </HBox>

                <Separator/>

                <!-- === 搜索区 === -->
                <HBox spacing="10">
                    <Label text="Search:"/>
                    <TextField fx:id="searchField" promptText="Enter keyword..."/>
                    <Button text="Search" onAction="#handleSearchTasks"/>
                </HBox>

                <!-- === 筛选区 === -->
                <HBox spacing="10">
                    <Label text="Filter:"/>
                    <ChoiceBox fx:id="filterCategoryBox" prefWidth="100"/>
                    <ChoiceBox fx:id="filterStatusBox" prefWidth="100"/>
                    <DatePicker fx:id="filterDatePicker"/>
                </HBox>

                <HBox spacing="10">
                    <Button text="Apply" onAction="#handleFilterTasks"/>
                    <Button text="Clear" onAction="#handleClearFilter"/>
                </HBox>
            </children>
        </VBox>
    </left>

    <!-- ===== 中心任务表格 ===== -->
    <center>
        <TableView fx:id="taskTable" prefHeight="600" prefWidth="800">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <columns>
                <TableColumn fx:id="taskNameColumn" text="Title" prefWidth="150"/>
                <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200"/>
                <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="120"/>
                <TableColumn fx:id="categoryColumn" text="Category" prefWidth="100"/>
                <TableColumn fx:id="priorityColumn" text="Priority" prefWidth="100"/>
                <TableColumn fx:id="completedColumn" text="Completed" prefWidth="100"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
